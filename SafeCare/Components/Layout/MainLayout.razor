@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Dense>
        <MudIcon Icon="@Icons.Material.Filled.LocalHospital" Size="Size.Large" Class="me-3" />
        <MudText>UDSK</MudText>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
    @* TODO Nie app bar, tylko jakiś kontener na dole *@
    <MudAppBar Bottom Color="Color.Transparent" ToolBarClass="justify-center" Dense>
        <MudText>
            Made with
            <MudIcon Icon="@Icons.Material.Sharp.FavoriteBorder" Color="Color.Primary" Size="Size.Small" Class="pt-1"/>
            by
            <MudLink Href="https://github.com/JustDunia" Target="_blank">JustDunia</MudLink>
        </MudText>
    </MudAppBar>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>